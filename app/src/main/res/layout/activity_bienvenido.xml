<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.BienvenidoActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <!-- Contenedor ARRIBA -->
            <RelativeLayout
                android:id="@+id/relContendor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bieLblSaludo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/bieLblSaludo"
                    android:gravity="center"
                    android:textSize="26sp"/>

            </RelativeLayout>

            <!-- Fragment ABAJO -->
            <fragment
                android:id="@+id/frgMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.example.ahorra.fragmentos.MenuFragment"
                tools:layout="@layout/fragment_menu" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>