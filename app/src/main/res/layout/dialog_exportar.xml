<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exportar Reporte Financiero"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtro de Periodo"
        android:textSize="14sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/dropdown_periodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Este Mes"/>

    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/radio_group_formato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radio_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDF (Visual y Resumido)"
            android:checked="true"
            app:drawableStartCompat="@drawable/ic_pdf" android:drawablePadding="12dp"/>

        <RadioButton
            android:id="@+id/radio_excel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excel (.xlsx) (Análisis Detallado)"
            app:drawableStartCompat="@drawable/ic_excel" android:drawablePadding="12dp"
            android:layout_marginTop="8dp"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La generación de reportes largos puede tomar unos segundos."
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_generar_y_compartir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generar y Compartir"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:backgroundTint="#00C853" /> </LinearLayout>