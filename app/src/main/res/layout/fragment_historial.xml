<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentos.HistorialFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="#F7FDF8"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center_horizontal"
            android:text="Historial de Transacciones"
            android:textSize="24dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <EditText
                android:id="@+id/HistTxtBusqueda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/HistTxtBusqueda"
                android:inputType="textEmailAddress"
                android:maxLength="100"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/filtro_mes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mes"
                android:textSize="16sp"
                android:textColor="@android:color/black"

                android:background="@drawable/filter_background"

                android:drawableEnd="@drawable/flechaabajo"

                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:drawablePadding="8dp"

                android:gravity="center_vertical"

                android:layout_marginEnd="8dp"

                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/filtro_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/filter_background"
                android:drawableEnd="@drawable/flechaabajo"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/filtro_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/filter_background"
                android:drawableEnd="@drawable/flechaabajo"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historial_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="8dp"
            android:paddingTop="8dp"
            tools:listitem="@layout/item_transaccion"
            />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_exportar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_upload"
        android:contentDescription="Exportar Historial"
        />
</FrameLayout>